<h1>All Events</h1>

<% @events.each do |event| %>

    <div class="card-header">
      <h4><%=event.title %></h4>
    </div>  
    <div class="card-body">
      <p class="card-text">
        <%= event.description %> 
      </p>
      <p class="card-text">
        Date: <%= event.date.strftime '%d-%m-%Y' %>
      </p>
      <p class="card-text">
        Created by: <%= event.creator.name %>
      </p>

      <%= link_to 'See attendees', event_path(event.id), class:"btn btn-primary mb-2" %> <br/>
      <%= link_to_attend(event.id) %>
    </div>
<% end %>

