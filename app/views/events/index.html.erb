<h2 class="mt-4">Upcoming events</h2>
<% @events.upcoming.each do |event| %>

    <div class="card-header bg-info mt-2">
      <h4><%=event.title %></h4>
    </div>  
    <div class="card-body border border-info">
      <p class="card-text">
        <%= event.description %> 
      </p>
      <p class="card-text">
        Date: <%= event.date.strftime '%d-%m-%Y' %>
      </p>
      <p class="card-text">
        Created by: <%= event.creator.name %>
      </p>

      <%= link_to 'See attendees', event_path(event.id), class:"btn btn-primary mb-2" %> 
      <%= link_to_attend(event.id)  %>
    </div>
<% end %>

<h2 class="mt-4">Past events</h2>

<% @events.past.each do |event| %>

    <div class="card-header bg-danger mt-2 text-light">
      <h4><%=event.title %></h4>
    </div>  
    <div class="card-body border border-danger">
      <p class="card-text">
        <%= event.description %> 
      </p>
      <p class="card-text">
        Date: <%= event.date.strftime '%d-%m-%Y' %>
      </p>
      <p class="card-text">
        Created by: <%= event.creator.name %>
      </p>

      <%= link_to 'Who attended', event_path(event.id), class:"btn btn-primary mb-2" %> <br/>
    </div>
<% end %>

